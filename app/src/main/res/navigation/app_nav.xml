<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav"
    app:startDestination="@id/appMainFragment">

    <fragment
        android:id="@+id/appMainFragment"
        android:name="com.reouven.easydriver.ui.AppMainFragment"
        android:label="fragment_app_main"
        tools:layout="@layout/fragment_app_main" >
        <action
            android:id="@+id/action_appMainFragment_to_infoTravelFragment"
            app:destination="@id/infoTravelFragment" />
        <action
            android:id="@+id/action_appMainFragment_to_inRoadFragment"
            app:destination="@id/inRoadFragment" />
        <action
            android:id="@+id/action_appMainFragment_to_driverHistoriyTravelFragment"
            app:destination="@id/driverHistoriyTravelFragment" />
    </fragment>
    <fragment
        android:id="@+id/infoTravelFragment"
        android:name="com.reouven.easydriver.ui.InfoTravelFragment"
        android:label="fragment_info_travel"
        tools:layout="@layout/fragment_info_travel" >
        <action
            android:id="@+id/action_infoTravelFragment_to_appMainFragment"
            app:destination="@id/appMainFragment" />
        <action
            android:id="@+id/action_infoTravelFragment_to_driverHistoriyTravelFragment"
            app:destination="@id/driverHistoriyTravelFragment" />
    </fragment>
    <fragment
        android:id="@+id/inRoadFragment"
        android:name="com.reouven.easydriver.ui.InRoadFragment"
        android:label="fragment_in_road"
        tools:layout="@layout/fragment_in_road" >
        <action
            android:id="@+id/action_inRoadFragment_to_appMainFragment"
            app:destination="@id/appMainFragment" />
        <action
            android:id="@+id/action_inRoadFragment_to_driverHistoriyTravelFragment"
            app:destination="@id/driverHistoriyTravelFragment" />
    </fragment>
    <fragment
        android:id="@+id/driverHistoriyTravelFragment"
        android:name="com.reouven.easydriver.ui.DriverHistoriyTravelFragment"
        android:label="fragment_driver_historiy_travel"
        tools:layout="@layout/fragment_driver_historiy_travel" >
        <action
            android:id="@+id/action_driverHistoriyTravelFragment_to_appMainFragment"
            app:destination="@id/appMainFragment" />
        <action
            android:id="@+id/action_driverHistoriyTravelFragment_to_inRoadFragment"
            app:destination="@id/inRoadFragment" />
        <action
            android:id="@+id/action_driverHistoriyTravelFragment_to_infoTravelFragment"
            app:destination="@id/infoTravelFragment" />
    </fragment>
</navigation>