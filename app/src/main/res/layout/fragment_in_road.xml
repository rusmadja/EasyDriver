<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.appFragment.InRoadFragment">

    <LinearLayout
        android:layout_width="422dp"
        android:layout_height="693dp"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/annule_road"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_cancel_black_18dp" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="50dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="transportation-animation.json"
            app:lottie_loop="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/onRoad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="start road"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/finishRoad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="finish succesfull"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>